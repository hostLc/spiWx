<view>
  <view class="order_details_list">    
     <view class="order_details_desc">
         <view class="order_details_item">
           <text>客户名字：</text>
           <text>{{details.Customer}}</text>
         </view>
         <view class="order_details_item">
           <text>联系电话：</text>
           <text>{{details.Phone}}</text>
         </view>
         <view class="order_details_item">
           <text>邮箱：</text>
           <text>{{details.Email}}</text>
         </view>
         <view class="order_details_item">
           <text>供应商名称：</text>
           <text class="text_a">{{details.Supplier}}</text>
         </view>
         <view class="order_details_item">
           <text>供应商电话：</text>
           <text>{{details.SupplierPhone}}</text>
         </view>
         <view class="order_details_item">
           <text>地址：</text>
           <text class="text_a">{{details.SupplierAddress}}</text>
         </view>
         <view class="order_details_item">
           <text>产品信息：</text>
           <text class="text_a">{{details.Product}}</text>
         </view>
         <view class="order_details_item">
           <text>产品数量：</text>
           <text>{{details.Nunber}}</text>
         </view>
         <view class="order_details_item">
           <text>款数：</text>
           <text>{{details.Design}}</text>
         </view>
         <view class="order_details_item">
           <text>创建时间：</text>
           <text>{{details.CreateTime}}</text>
         </view>
          <view class="order_details_item">
           <text>状态</text>
           <text wx:if="{{details.Status == 0}}">待审核</text>
           <text wx:if="{{details.Status == 1}}">已完成</text>
           <text wx:if="{{details.Status == 2}}">待支付</text>
           <text wx:if="{{details.Status == 3}}">已取消</text>
         </view>
     </view>
     <view class="order_details_btn"> 

        <button class="details_btn_calcel" wx:if="{{details.Status == 2}}">立即支付</button>
        <button class="details_btn_calcel" wx:if="{{details.Status == 0}}">取消</button>
        <button class="details_btn_ok"> 确认</button> 
     </view>
  </view>
</view>
